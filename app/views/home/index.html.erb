<div class="row mt-5">
  <div class="col-12 col-md-5 mx-auto">
    <div class="card">
      <div class="col-12 d-flex flex-column justify-content-center align-items-center my-4">
        <%- unless current_user.avatar.attached? %>
          <img src="https://i.imgur.com/Cl8TXa7.png" class="user-avatar" alt="Profile Image">
        <% else %>
          <%= image_tag url_for(current_user.avatar), class: "user-avatar", alt: "Profile Image"%>
        <% end %>
      </div>
      <h5 class="text-center">
        <%= current_user.name %>
      </h5>
      <small class="d-block mb-4 text-center text-secondary">
        <%= current_user.email %>
      </small>
      <p class="text-center mx-4 mb-4"> You provide your data to our robot without human interaction. Then it shows stats to you. </p>
    </div>
  </div>
</div>

<div class="row mt-5">
  <div class="col-auto">
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#folderModal">
      <i class="bi bi-folder-plus me-2"></i> New Folder
    </button>
    <%= render "folder_form" %>
  </div>
  <%- if @folders.present? %>
    <%- @folders.each do |folder| %>
      <div class="col-auto">
        <%= link_to folder_path(folder), class: "btn btn-light" do %>
          <i class="bi bi-folder2 me-2"></i> <%= folder.name %>
        <% end %>
      </div>
    <% end %>
  <% else %>
    <div class="col-12 text-secondary text-center">
      You don't have any folders.
    </div>
  <% end %>
</div>
