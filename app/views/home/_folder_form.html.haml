/ Modal
#folderModal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "folderModalLabel", :tabindex => "-1"}
  .modal-dialog.modal-dialog-centered
    .modal-content
      .modal-header.border-0
        %h5#folderModalLabel.modal-title
          %i.bi.bi-folder-plus.me-2
          New Folder
        %button.btn-close{"aria-label" => "Close", "data-bs-dismiss" => "modal", :type => "button"}
      .modal-body
        = form_for @folder do |f|
          .input-group.mb-3
            = f.text_field :name, class: "form-control", "aria-describedby" => "button-folder", "aria-label" => "Folder name", :placeholder => "Folder name"
            = f.submit "Create", class: "btn btn-primary", id: "button-folder"
